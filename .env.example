# Environment variables for Uniclips Backend (JavaScript)

# Database - Local Development
DB_HOST=127.0.0.1
DB_USER=root
DB_PASS=
DB_NAME=uniclips
DB_PORT=3306

# Database - Production (DigitalOcean/AWS RDS)
# Uncomment and configure for production:
# DB_HOST=your-db-host.db.ondigitalocean.com
# DB_USER=doadmin
# DB_PASS=your_secure_password
# DB_NAME=uniclips
# DB_PORT=25060
# DB_SSL=true
# DB_SSL_CA=./ca-certificate.crt

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Server
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://your-frontend.netlify.app

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://your-frontend.netlify.app

# Vimeo (if using Vimeo API)
VIMEO_CLIENT_ID=your_vimeo_client_id
VIMEO_CLIENT_SECRET=your_vimeo_client_secret
VIMEO_ACCESS_TOKEN=your_vimeo_access_token

# SuperAdmin - Secret key for initial SuperAdmin creation
# Use a strong random string. This allows creating the first SuperAdmin via API.
SUPER_ADMIN_SECRET_KEY=your_super_admin_secret_key_here
